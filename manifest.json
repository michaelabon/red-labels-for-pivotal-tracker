{
  "name": "Red and Blue Labels for Pivotal Tracker",
  "version": "1.3.1",
  "manifest_version": 2,
  "author": "Mike Kenyon, edited by Carlos Arguello",
  "description": "Turn any \"blocked\" or \"needs <something>\" stories red so they stand out! Turn any \"planner\" stories blue so you know which stories to estimate next.",
  "homepage_url": "https://github.com/cjarguello/red-and-blue-labels-for-pivotal-tracker/edit/master/manifest.json",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "http://www.pivotaltracker.com/*",
    "https://www.pivotaltracker.com/*"
  ],
  "short_name": "Red & Blue Labels",
  "content_scripts": [
    {
      "matches": [
        "http://www.pivotaltracker.com/*",
        "https://www.pivotaltracker.com/*"
      ],
      "js": [
        "src/inject/isLabelRed.js",
        "src/inject/isLabelBlue,
        "src/inject/inject.js"
      ],
      "css": [
        "css/inject/inject.css"
      ]
    }
  ]
}
